<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyThemeNormal" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_na</item>
    </style>
    
    <style name="MyThemeNight" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/blur_bg_na</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAddCityItemStyle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="setting_item_imagebutton_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="setting_item_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="setting_item_linearlayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:divider">@drawable/divider_linear_item</item>
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle|end|beginning</item>
    </style>
    
    <style name="widget_item_linearlayout_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|center</item>
    </style>
    
</resources>
