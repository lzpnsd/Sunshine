<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none"
        android:layout_marginBottom="@dimen/height_main_title" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/trans"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_settings_content"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/personal_back" >

                <ImageButton
                    android:id="@+id/ib_settings_face"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/sns_face_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ib_settings_face"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/tv_mine_face_login"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/ib_settings_letter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_toRightOf="@id/ib_settings_face"
                    android:background="@drawable/selector_owner_message" />
            </RelativeLayout>

            <LinearLayout style="@style/setting_item_linearlayout_style" >

                <LinearLayout
                    android:id="@+id/li_settings_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/padding_content"
                    android:paddingBottom="@dimen/padding_content" >

                    <ImageButton
                        style="@style/setting_item_imagebutton_style"
                        android:background="@drawable/owner_setting" />

                    <TextView
                        style="@style/setting_item_textview_style"
                        android:text="@string/btn_mine_settings"
                        android:textSize="@dimen/text_size_weather" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>