<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Li_widget_layout"
    style="@style/widget_item_linearlayout_style"
    android:background="@drawable/corner_widget_background"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center" >

        <TextView
            android:id="@+id/tv_widget_time"
            style="@style/widget_item_linearlayout_style"
            android:layout_marginLeft="25dp"
            android:text="10:20"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="7dp"
            android:layout_below="@id/tv_widget_time"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_widget_area"
                style="@style/widget_item_linearlayout_style"
                android:text="乌鲁木齐"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_widget_data"
                style="@style/widget_item_linearlayout_style"
                android:layout_marginLeft="5dp"
                android:text="04/25"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_widget_month"
                style="@style/widget_item_linearlayout_style"
                android:layout_marginLeft="5dp"
                android:text="三月二十"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_widget_weather"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|center"
        android:layout_marginRight="5dp" >

        <TextView
            android:id="@+id/tv_widget_temperature"
            style="@style/widget_item_linearlayout_style"
            android:text="25℃"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_widget_weather"
            style="@style/widget_item_linearlayout_style"
            android:layout_marginTop="10dp"
            android:text="晴"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>