<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView 
        android:id="@+id/iv_alarm_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_view_content"
        android:src="@drawable/ic_launcher"
        />
    
	<TextView 
	    android:id="@+id/tv_alarm_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:singleLine="true"
	    android:layout_toRightOf="@id/iv_alarm_icon"
	    style="@style/NormalTextStyle"
	    />
	
	<TextView 
	    android:id="@+id/tv_alarm_content"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/iv_alarm_icon"
	    android:layout_below="@id/tv_alarm_title"
	    android:layout_marginTop="@dimen/margin_small"
	    style="@style/NormalTextStyle"
	    />
	
	<Button 
	    android:id="@+id/btn_alarm_clear"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="@dimen/margin_small"
	    android:text="@string/tv_alarm_notification"
	    android:background="@drawable/selector_attention_btn"
	    style="@style/WeatherTextStyle"
	    />
    
</RelativeLayout>
