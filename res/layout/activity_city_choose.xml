<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:id="@+id/rl_city_choose_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_main_title"
        android:background="@drawable/common_title_bar_bkg"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_title_horizontal"
        android:paddingRight="@dimen/padding_title_horizontal"
        android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/ib_city_choose_title_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/description_city_choose_back"
            android:background="@null"
            android:src="@drawable/selector_title_bar_back" />

        <ImageButton 
            android:id="@+id/ib_city_choose_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ib_city_choose_title_add"
            android:contentDescription="@string/description_city_choose_edit"
            android:background="@null"
            android:src="@drawable/selector_edit"
            />
        
        <ImageButton
            android:id="@+id/ib_city_choose_title_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/description_city_choose_add"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/selector_add"
             />
    </RelativeLayout>

    <ListView 
        android:id="@+id/lv_city_choose_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_title_horizontal"
        ></ListView>
    
</RelativeLayout>
