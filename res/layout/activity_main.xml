<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_na"
    tools:context="com.lzpnsd.sunshine.MainActivity" >

    <RelativeLayout
        android:id="@+id/rl_main_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/trans"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_title_horizontal"
        android:paddingRight="@dimen/padding_title_horizontal" >

        <ImageButton
            android:id="@+id/ib_main_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/trans"
            android:contentDescription="@string/description_main_title_city"
            android:src="@drawable/city_btn" />

        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text="mine"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title" />

        <ImageButton
            android:id="@+id/ib_main_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/trans"
            android:contentDescription="@string/description_main_title_share"
            android:src="@drawable/common_title_share" />
    </RelativeLayout>

    <ViewFlipper
        android:id="@+id/vf_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg_main_bottom_selector"
        android:layout_below="@id/rl_main_title" >
    </ViewFlipper>

    <RadioGroup
        android:id="@+id/rg_main_bottom_selector"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/common_title_bar_bkg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_main_bottom_weather"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="-3dp"
            android:drawableTop="@drawable/selector_rb_weather"
            android:gravity="center"
            android:text="@string/tab_weather"
            android:textColor="@drawable/selector_rb_text"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/rb_main_bottom_index"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="-3dp"
            android:drawableTop="@drawable/selector_rb_shijing"
            android:gravity="center"
            android:text="@string/tab_shijing"
            android:textColor="@drawable/selector_rb_text"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/rb_main_bottom_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="-3dp"
            android:drawableTop="@drawable/selector_rb_mine"
            android:gravity="center"
            android:text="@string/tab_mine"
            android:textColor="@drawable/selector_rb_text"
            android:textSize="11sp" />
    </RadioGroup>

</RelativeLayout>