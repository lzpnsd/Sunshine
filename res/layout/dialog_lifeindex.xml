<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_dialog_index"
    android:layout_height="wrap_content" >
    
    <TextView 
        android:id="@+id/tv_index_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/WeatherTextStyle"
        android:textSize="@dimen/text_size_title"
        android:gravity="center_horizontal"
        />

    <TextView 
        android:id="@+id/tv_index_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/WeatherTextStyle"
        android:textSize="@dimen/text_size_middle"
        android:layout_below="@id/tv_index_name"
        />
    
    <TextView 
        android:id="@+id/tv_index_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/WeatherTextStyle"
        android:textSize="@dimen/text_size_middle"
        android:layout_below="@id/tv_index_value"
        />
    
</RelativeLayout>
