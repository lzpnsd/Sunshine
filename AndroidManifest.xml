<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lzpnsd.sunshine"
    android:versionCode="1"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />

    <!-- 这个权限用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" >
    </uses-permission>
    <!-- 这个权限用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" >
    </uses-permission>
    <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" >
    </uses-permission>
    <!-- 获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>
    <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" >
    </uses-permission>
    <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" >
    </uses-permission>
    <!-- 写入扩展存储，向扩展卡写入数据，用于写入离线定位数据 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <!-- 访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- SD卡读取权限，用户写入离线定位数据 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" >
    </uses-permission>
    <!-- 调用系统摄像头 -->
    <uses-permission android:name="android.permission.CAMERA"/>
	<!-- 接收开机广播 -->
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
	<!-- 闪光灯 -->
    <uses-permission android:name="android.permission.FLASHLIGHT"/>  
    <!-- 震动 -->
	<uses-permission android:name="android.permission.VIBRATE"/>  

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <application
        android:name="com.lzpnsd.sunshine.SunshineApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="StRKQaHF4Y4ptoMsGyrUjhTGRbX3WTfT" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.lzpnsd.sunshine.activity.SettingsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.lzpnsd.sunshine.activity.CityListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.lzpnsd.sunshine.activity.CityAddActivity"
            android:label="@string/app_name" >
        </activity>
		<activity android:name="com.lzpnsd.sunshine.activity.UploadShijingActivity"
		    android:label="@string/app_name">
		</activity>
		<activity android:name="com.lzpnsd.sunshine.activity.SkinShowActivity"
		    android:label="@string/app_name">
		</activity>
		<activity android:name="com.lzpnsd.sunshine.activity.AboutMeActivity"
		    android:label="@string/app_name">
		</activity>
		<activity android:name="com.lzpnsd.sunshine.activity.MineLoginActivity"
		    android:label="@string/app_name">
		</activity>
		<activity android:name="com.lzpnsd.sunshine.activity.MineRegisterActivity"
		    android:label="@string/app_name"/>
        
        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" >
        </service>
        <service android:name="com.lzpnsd.sunshine.service.RefreshWeatherService"
            android:process=":remote"
            android:priority = "1000">
            <intent-filter >
                <action android:name="com.lzpnsd.sunshine.service.REFRESH_WEATHER_SERVICE"/>
            </intent-filter>
        </service>
        
        <receiver android:name="com.lzpnsd.sunshine.widget.provider.WidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.lzpnsd.sunshine.widget.UPDATE_ALL"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_info" />
        </receiver>
        <receiver android:name="com.lzpnsd.sunshine.receiver.BootCompletedReceive">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>